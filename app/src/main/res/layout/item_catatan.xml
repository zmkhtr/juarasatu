<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textItemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berhasil"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#125E01"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textItemDompetAsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOPAY"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            />
        <TextView
            android:id="@+id/textItemDompetTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVO"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/textItemNomorTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="081281920128"
            android:padding="2dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/textItemNominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 50000"
            android:padding="2dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>